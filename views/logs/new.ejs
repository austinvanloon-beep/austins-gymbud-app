<%- include('../partials/header') %>

<h1>New Workout Log for <%= user.username %></h1>

<form action="/users/<%= user._id %>/logs" method="POST">
  <label for="workoutType">Workout Type:</label>
  <input type="text" name="workoutType" id="workoutType" required>

  <label for="duration">Duration (minutes):</label>
  <input type="number" name="duration" id="duration" required min="1">

  <label for="date">Date:</label>
  <input type="date" name="date" id="date" required>

  <label for="notes">Notes:</label>
  <textarea name="notes" id="notes"></textarea>

  <button type="submit">Add Log</button>
</form>

<a href="/users/<%= user._id %>/logs">Back to Logs</a>


